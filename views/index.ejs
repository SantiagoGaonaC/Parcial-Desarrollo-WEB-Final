<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/header.ejs") %>
        <script>
            $(document).on('click', '#favoriteMark', function () {
                $(this).toggleClass('fa-heart-o');
                $(this).toggleClass('fa-heart');
            });
        </script>
</head>

<body>
    <%- include("partials/top.ejs") %>
        <div class="container">
            <div class="row justify-content-center top-buffer">
                <% data.forEach(function(producto){ %>
                    <div class="col-md-2 p-1 mx-4 my-2 cell text-center item">
                        <div id="block_container">
                            <div class="sale">-<%= producto.descuento %>%</div>
                            <div class="favoriteHeart">
                                <i class="fa fa-heart-o" style="font-size:18px" id="favoriteMark"></i>
                            </div>
                        </div>
                        <img src="<%=producto.image%>.jpg" width="100" height="100" data-bs-toggle="modal"
                            data-bs-target="#b<%= producto.id %>">
                        <p class="nombreProd">
                            <%= producto.nombre %>
                        </p>
                        <p class="cantidadProd">
                            <%= producto.monto %>
                                <%= producto.unidad %>
                        </p>
                        <p class="precio">
                            <%= producto.precio %> €
                        </p>
                        <a type="button" class="btn" href="/agregar-carrito/<%= producto.id %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-bag-plus" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5z" />
                                <path
                                    d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                            </svg>
                            Añadir a la cesta
                        </a>
                    </div>
                    <% }) %>
            </div>
            <%- include("partials/modalCart.ejs", {carrito:carrito,total:total}) %>
                <%- include("partials/modal.ejs") %>
</body>

</html>