<% data.forEach(function(producto){ %>
    <div class="modal" id="b<%= producto.id %>">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-4 d-flex">
                            <img src="<%=producto.image%>.jpg" height="150" width="150">
                        </div>
                        <div class="col-8">
                            <p class="nombreProd pLeft">
                                <%= producto.nombre %>
                            </p>
                            <p class="cantidadProd pLeft">
                                <%= producto.monto %>
                                    <%= producto.unidad %>
                            </p>
                            <p class="precio pLeft">
                                <%= producto.precio %> €
                            </p>
                            <p class="pLeft">
                                <%= producto.descripcion %>
                            </p>
                            <br>
                            <div class="flexB">
                                <input type="number" min="1" step="1" class="form-control" id="amountInput" value="1">
                                </p>
                                <button type="button" class="btn2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-bag-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5z" />
                                        <path
                                            d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                    </svg>
                                    Añadir a la cesta
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% }) %>